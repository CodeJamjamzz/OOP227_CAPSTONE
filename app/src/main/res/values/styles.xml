<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Account Verification Styles -->
    <style name="activity_heading_1">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="heading_1_tip">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="activity_heading_2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="attendant_details_type">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dashboard Styles -->
    <style name="dashboard_heading_1">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dashboard_heading_2">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dashboard_eventDateLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dashboard_eventDate">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Event Details Styles  -->
    <style name="eventDetails_attendantStatus">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="eventDetails_noAttendeeStatus">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="eventDetails_attendeeStatusDetails">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="eventDetails_attendeeStatusData">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="eventDetails_button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Custom Theme for DatePickerDialog -->
    <style name="CustomDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/peachwhite</item>
        <item name="android:colorAccent">@color/green</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/green</item>
        <item name="android:textColor">@color/green</item>
    </style>

    <!-- Custom Theme for TimePickerDialog -->
    <style name="CustomTimePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/peachwhite</item>
        <item name="android:colorAccent">@color/green</item>
        <item name="colorPrimaryDark">@color/peachwhite</item>
        <item name="android:colorControlActivated">@color/green</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/green</item>
        <item name="android:textColor">@color/green</item>
    </style>

</resources>